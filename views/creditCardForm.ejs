<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<style>
			* {
				box-sizing: border-box;
			}

			input[type="text"],
			input[type="email"],
			input[type="date"],
			select,
			textarea,
			checkbox {
				width: 100%;
				padding: 12px;
				border: 1px solid #ccc;
				border-radius: 4px;
				resize: vertical;
			}

			label {
				padding: 12px 12px 12px 0;
				display: inline-block;
			}

			input[type="submit"],
			input[type="reset"],
			button {
				background-color: #0066ff;
				color: white;
				padding: 12px 20px;
				margin-left: 10px;
				border: none;
				border-radius: 4px;
				cursor: pointer;
				float: right;
			}

			.container {
				border-radius: 5px;
				background-color: #b8c4e1;
				padding: 20px;
			}

			.col-25 {
				float: left;
				width: 25%;
				margin-top: 6px;
			}

			.col-75 {
				float: left;
				width: 75%;
				margin-top: 6px;
				white-space: nowrap;
			}

			/* Clear floats after the columns */
			.row::after {
				content: "";
				display: table;
				clear: both;
			}

			/* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
			@media screen and (max-width: 600px) {
				.col-25,
				.col-75,
				input[type="submit"],
				input[type="reset"] {
					width: 100%;
					margin-top: 0;
				}
			}
		</style>
	</head>

	<body>
		<h2>Credit Card Application</h2>
		<p>All fields are required</p>
		<div class="container">
			<form action="/submit-form" method="POST">
				<div class="row">
					<div class="col-25">
						<label for="fname">First Name</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="firstname"
							name="firstname"
							placeholder="Your name.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="lname">Last Name</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="lastname"
							name="lastname"
							placeholder="Your last name.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="email">Email</label>
					</div>
					<div class="col-75">
						<input
							type="email"
							id="email"
							name="email"
							placeholder="Your email.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="lname">Date of Birth</label>
					</div>
					<div class="col-75">
						<input
							type="date"
							id="dob"
							name="dob"
							placeholder="Your date of birth.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="address">Address</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="address"
							name="address"
							placeholder="Your address.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="city">City</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="city"
							name="city"
							placeholder="Your city.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="state">State</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="state"
							name="state"
							placeholder="Your state.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="Zip">Zip</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="zip"
							name="zip"
							placeholder="Your zip code.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="ssn">SSN</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="ssn"
							name="ssn"
							placeholder="Your Social Security Number (XXX-XX-XXXX).."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="creditcardtype">Credit Card Type</label>
					</div>
					<div class="col-75">
						<select id="creditcardtype" name="creditcardtype" required>
							<option value="rewards">Rewards</option>
							<option value="cashback">Cash Back</option>
							<option value="lowinterest">Low Interest</option>
						</select>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="annualincome">Annual Income</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="annualincome"
							name="annualincome"
							placeholder="Your Annual Income.."
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="creditcheckconsent">Credit Check</label>
					</div>
					<div class="col-75">
						<input
							type="checkbox"
							id="creditcheckconsent"
							name="creditcheckconsent"
							value="creditcheck"
						/>
						<label for="creditcheckconsent">
							I agree to have my credit history and credit score
							checked</label
						>
					</div>
				</div>
				<div class="row">
					<input type="submit" value="Submit" />
					<input type="reset" value="Reset" />
				</div>
			</form>
		</div>
	</body>
</html>
